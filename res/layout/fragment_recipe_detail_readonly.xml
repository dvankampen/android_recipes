<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewRecipeScrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/RelativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="464dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/smallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="40dp" >

                <TextView
                    android:id="@+id/viewName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/back"
                    android:ems="10"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/medium_text"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/viewFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/back"
                    android:ems="10"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/medium_text" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row2"
                android:layout_width="wrap_content"
                android:layout_height="40dp" >

                <TextView
                    android:id="@+id/viewOvenTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/back"
                    android:ems="10"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/medium_text" />

                <TextView
                    android:id="@+id/viewCookTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/back"
                    android:ems="10"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/medium_text" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignWithParentIfMissing="false"
            android:layout_below="@+id/smallText"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="false"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/viewIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                android:ems="10"
                android:gravity="top|center_vertical"
                android:longClickable="true"
                android:textIsSelectable="true"
                android:textSize="@dimen/big_text" />

            <TextView
                android:id="@+id/viewDirections"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                android:ems="10"
                android:textIsSelectable="true"
                android:textSize="@dimen/big_text" />
        </LinearLayout>

        <Button
            android:id="@+id/editRecipeButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/viewLinearLayout"
            android:text="@string/editRecipe" />

        <Button
            android:id="@+id/viewImage2"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/viewLinearLayout"
            android:text="@string/viewImage" />

    </RelativeLayout>

</ScrollView>